{
  "name": "botanix-sidecar-sdk",
  "version": "0.0.1",
  "description": "SDK for interacting with Botanix Sidecar service",
  "keywords": ["botanix", "bitcoin", "pegin", "sidecar", "crypto", "blockchain"],
  "author": "Botanix Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/botanix-labs/botanix-sidecar-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/botanix-labs/botanix-sidecar-sdk/issues"
  },
  "homepage": "https://github.com/botanix-labs/botanix-sidecar-sdk#readme",
  "type": "commonjs",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "types": "dist/cjs/index.d.ts",
  "scripts": {
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "yarn build:cjs && yarn build:esm",
    "dev": "tsc -p tsconfig.cjs.json --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "jest": "^29.7.0",
    "rollup": "^4.40.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@ethereumjs/util": "^9.1.0",
    "axios": "^1.9.0",
    "bitcoin-core": "^4.2.0",
    "bitcoinjs-lib": "^6.1.7",
    "electrum-client": "^0.0.6",
    "ethers": "5.7",
    "siwe": "2.3.0",
    "tiny-secp256k1": "^2.2.3"
  }
}
