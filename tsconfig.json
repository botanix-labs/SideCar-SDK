{
    "compilerOptions": {
      "target": "es2018",
      "moduleResolution": "node",
      "declaration": true,
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["es2018"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }